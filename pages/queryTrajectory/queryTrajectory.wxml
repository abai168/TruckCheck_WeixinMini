<view class="container">
    <map 
        id="map" 
        scale="5" 
        longitude="{{longitude}}" 
        latitude="{{latitude}}"
        circles="{{circles}}"
        markers="{{markers}}" 
        polyline="{{polyline}}" 
        controls="{{controls}}" 
        bindcontroltap="controltap" 
        bindmarkertap="markertap"  
        bindregionchange="regionchange" 
        show-location 
        style="width: 100%; height: 1200rpx;">
    </map>
</view>